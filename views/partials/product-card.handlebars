<div class="col">
    {{#each dbDepartmentData}}
    <div class="card" style="width: 12rem;">
        <img src={{img}} alt={{product_description}}>
        <div class="card-body text-center bg-dark text-white">
            <h5 class="card-title">{{product_name}}</h5>
            <p class="card-text">{{product_description}}</p>
            <p class="card-text">{{price}}</p>
            <div class="d-flex justify-content-center">
        <button class="btn btn-success" id="cart">Add to Cart</button>
      </div>
      <div class="btn-group" role="group" id="quantityManager">
        <button class="btn btn-success" id="subtract">-</button>
        <button class="btn btn-no-style text-white" id="quantity"></button>
        <button class="btn btn-success" id="add">+</button>
      </div>
        </div>
    </div>
          
    {{/each}}
</div>
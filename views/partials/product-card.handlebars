<section class="bg-dark text-light d-flex justify-content-center">
      <div class="container">
        <div class="g-4 my-5 justify-content-center">
    <ul id="myList" class="d-flex">
    {{#each dbDepartmentData}}
    <li id={{product_name}} value={{price}} class="d-flex justify-content-space-around">
        <div class="col">
    <div class="card" id="card" style="width: 12rem;">
        <img src={{img}} alt={{product_description}}>
        <div class="card-body text-center bg-dark text-white">
            <h5 class="card-title" id="card-title">{{product_name}}</h5>
            <p class="card-text">{{product_description}}</p>
            <p class="card-text price">${{price}}</p>
            <div class="d-flex justify-content-center">
        <button class="btn btn-success" id="cart">Add to Cart</button>
      </div>
      <div class="btn-group" role="group" id="quantityManager">
        <button class="btn btn-success" id="subtract">-</button>
        <button class="btn btn-no-style text-white" id="quantity"></button>
        <button class="btn btn-success" id="add">+</button>
      </div>
        </div>
    </div>
    </div>
    </li>
    {{/each}}
    </ul>
</div>
</div>
</section>
<script src="/javascript/quantityButtons.js"></script>
    <script src="/javascript/sortButtons.js"></script>